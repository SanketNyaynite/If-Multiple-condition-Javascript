<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<TITLE> If multiple condition </TITLE>
<script>
var products=[
{ProductId:1,Name:"Samsung Tv",Price:45000,Photo:"Images/tv.jpg"},
{ProductId:2,Name:"Nike shoe",Price:4500,Photo:"Images/shoe.jpg"}
];

function ShowProduct()
{
var product=document.getElementById("lstProducts").value;
var prodId=document.getElementById("prodId");
var prodName=document.getElementById("prodName");
var prodPrice=document.getElementById("prodPrice");
document.getElementById("tbl").style.display="block";

function GetDetails(product)
{
pic.src=products[product].Photo;
prodId.innerHTML=products[product].ProductId;
prodName.innerHTML=products[product].Name;
prodPrice.innerHTML=products[product].Price;
}

if(product=="0")
{
	GetDetails(product);
}
else if(product=="1")
{
	GetDetails(product);
}
else
{
	alert("Please select a product. ");
	document.getElementById("tbl").style.display="none";
}
}
</script>
</HEAD>


<BODY>
<div align="center">
<form>
<h2>Products Information</h2>
<select id="lstProducts" onchange="ShowProduct()">
<option value="-1">Select a product</option>
<option value="0">Samsung TV</option>
<option value="1">Nike shoe</option>
</select><br><br>

<table width="400" border="1" align="center" id="tbl">
<tr>
<td><img src="" width="100" height="100" border="1" id="pic"></td>
<td>
<table frame="box" rules="all" align="center">
<tr>
	<td>Product Id</td>
	<td id="prodId"></td>
</tr>
<tr>
<td>Name </td>
<td id="prodName"></td>
</tr>
<tr>
<td>Price </td>
<td id="prodPrice"></td>
</tr>
</table>
</td>
</tr>
</table>
</td>
</tr>
</table>
</form>
</div>
</BODY>
</HTML>
